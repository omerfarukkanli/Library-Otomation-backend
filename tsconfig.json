{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src"
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}